<Window x:Class="ServerTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServerTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <GroupBox Header="Lamba Grubu" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="lampChange" Content="Lamba Değiştir" Click="LampButton_Click" Margin="10"/>
                <Button x:Name="lampButton" Content="Lamba" Margin="10"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Text Grubu" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,120,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="textInput" TextChanged="TextInput_TextChanged" Width="200" Margin="10"/>
                <Button x:Name="randomButton" Content="Random Sayı" Click="RandomButton_Click" Margin="10"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
